# Aktifkan Rewrite Engine
RewriteEngine On

# Redirect HTTP ke HTTPS (jika ada SSL)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Blokir akses langsung ke folder config
<Files "database.php">
    Order Allow,Deny
    Deny from all
</Files>

# Proteksi file penting
<FilesMatch "^(database\.php|\.htaccess)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Prevent directory listing
Options -Indexes

# Custom Error Pages (opsional)
ErrorDocument 404 /konflik-satwa/index.php
ErrorDocument 403 /konflik-satwa/index.php

# Security Headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# PHP Settings untuk keamanan
<IfModule mod_php7.c>
    php_value session.cookie_httponly 1
    php_value session.cookie_secure 0
    php_value session.use_only_cookies 1
</IfModule>

# Kompresi file untuk loading lebih cepat
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>